<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/cinza"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SolActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/sol"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A temperatura média na superfície do Sol é de aproximadamente 5.500 °C."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A distância média é de cerca de 150 milhões de quilômetros."
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"/>

</LinearLayout>